<h1>Welcome<%= ", #{current_user.name}" if current_user %>!</h1>
<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = User.avatar_url(@user, 128) %>
      <% unless avatar_url.nil? %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>


    </div>
  </div>
</div>

<h2>Items</h2>
<%= render @user.items %>

<%= render "items/form" %>
