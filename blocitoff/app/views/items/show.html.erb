
  <% @items.each do |item| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to render_item_title %>
        </h4>

        <small>
          <%= items.count %> Items
        </small>
        </h4>
      </div>
    </div>
  <% end %>
<% if current_user %>
  <div class="col-md-4">
   <%= link_to "New Item", new_item_path(@item), class: 'btn btn-success' %>
  </div>
<% end %>
